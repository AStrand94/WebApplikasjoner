@model WebApplication3.Model.Order
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

<link href="~/Content/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-timepicker-addon.min.js"></script>
@{
    ViewBag.Title = "CreateOrder";
}

<h2>Create new order</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["message"]
    </div>
}

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @TempData["errorMessage"]
    </div>
}

<div class="alert alert-danger" id="fieldsError" hidden="">
    <strong>Please fill out all fields!</strong>
</div>

@using (Html.BeginForm("CreateOrder", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return validateForm()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!--CUSTOMER-->
        <div class="form-group">
            @Html.LabelFor(model => model.Customer, "Contact Person", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Customer, new SelectList(ViewBag.AllCustomers, "Id", "FullInfo"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Customer, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--FLIGHT-->
        <div class="form-group">
            @Html.LabelFor(model => model.Tickets[0].Flight.Time, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tickets[0].Flight.Time, new { htmlAttributes = new { @class = "form-control date-picker", value = DateTime.Now.ToString("dd-MMM-yyyy  hh:mm tt"), onkeydown = "return false", onpaste = "return false", id = "date" } })
                @Html.ValidationMessageFor(model => model.Tickets[0].Flight.Time, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tickets[0].Flight.Price, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tickets[0].Flight.Price, new { htmlAttributes = new { @class = "form-control", name = "Price" , id = "price"} })
                @Html.ValidationMessageFor(model => model.Tickets[0].Flight.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tickets[0].Flight.Route, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="Route.Id">
                    @foreach (var route in (IEnumerable<WebApplication3.Model.Route>)TempData["allRoutes"])
                    {
                        <option value="@route.Id">@route.FromAirport.Name - @route.ToAirport.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Tickets[0].Flight.Airplane, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="Airplane.Id">
                    @foreach (var airplane in (IEnumerable<WebApplication3.Model.Airplane>)TempData["allAirplanes"])
                    {
                        <option value="@airplane.Id">@airplane.Model</option>
                    }
                </select>

            </div>
        </div>

        <!--
        <div class="form-group">
            @Html.LabelFor(model => model.TotalPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
            </div>
        </div>
        -->

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    $(document).ready(function () {

        $(".date-picker").each(function () {
            $(this).datetimepicker({
                dateFormat: 'dd-M-yy',
                changeMonth: true,
                changeYear: true,
                timeFormat: 'hh:mm TT',
                controlType: "select",
                onSelect: function () {
                    $(this).text(this.value);
                }
            });
        });
    });


    function validateForm() {
        var date = $('#date').val();
        var price = $('#price').val();

        console.log(date);
        console.log(price);

        if (!date || !price) {
            $('#fieldsError').show();
            return false;
        }

        return true;
    }
</script>
