<link rel="stylesheet" type="text/css" href="~/Content/CSS_files_admin/Index.css" />
<script src="~/Scripts/Javascript_Admin/Index.js"></script>

@{
    ViewBag.Title = "Index";
}

<div id="indexContainer">
    <h3>Hello <b>@ViewBag.loggedInUser</b>, and welcome to the <i>other side</i> of Skytravel!</h3>

    <h5>You can administrate Skytravel by navigating in the top menu.</h5>
</div>

<div id="indexBorder">
    <div class="col-md-12">
        <a class="btn btn-default" id="numbersButton">Show me some numbers <span class="glyphicon glyphicon-arrow-right"></span></a>
    </div>
</div>

<div id="numbersRow">
    <div class="col-sm-6">
        <h3>
            Some numbers
        </h3>
        <button type="button" id="closeButton" class="close closeModal">×</button>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <td>
                        Registered users
                    </td>
                    <td style="width: 35%;">
                        @ViewBag.Customers
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        Orders
                    </td>
                    <td>
                        @ViewBag.Orders
                    </td>
                </tr>
                <tr>
                    <td>
                        Flights
                    </td>
                    <td>
                        @ViewBag.Flights
                    </td>
                </tr>
                <tr>
                    <td>
                        Routes
                    </td>
                    <td>
                        @ViewBag.Routes
                    </td>
                </tr>
                <tr>
                    <td>
                        Airplanes
                    </td>
                    <td>
                        @ViewBag.Airplanes
                    </td>
                </tr>
                <tr>
                    <td>
                        Airports
                    </td>
                    <td>
                        @ViewBag.Airports
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-6">
    </div>
</div>

