
@model WebApplication3.Models.Customer

@{
    ViewBag.Title = "Registration";

    List<SelectListItem> titles = new List<SelectListItem>();
    titles.Add(new SelectListItem() { Text = "Mr", Value = "Mr" });
    titles.Add(new SelectListItem() { Text = "Mrs", Value = "Mrs" });
    titles.Add(new SelectListItem() { Text = "Ms", Value = "Ms" });
    titles.Add(new SelectListItem() { Text = "Miss", Value = "Miss" });
}

<script src="~/Scripts/Javascript/Registration.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/CSS/Registration.css" />

<br />

@{
    var order = (List<WebApplication3.Models.Flight>)ViewBag.FlightList;
    if (order != null)
    {
        <div class="container" id="registrationFlightInformationDiv">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>From</th>
                        <th>To</th>
                        <th>Date</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var f in order)
                    {
                        <tr>
                            <td>@f.Route.FromAirport.Name</td>
                            <td>@f.Route.ToAirport.Name</td>
                            <td>@f.Time</td>
                            <td>@(f.Price * ViewBag.NumberTravellers) $</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

